HEAT_WAVE_THRESHOLD=95
# Cold snap threshold: 20°F
COLD_SNAP_THRESHOLD=20

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_ENABLED=true

# =============================================================================
# PRIVACY AND SECURITY
# =============================================================================
PRIVACY_FILTER_ENABLED=true
CONSENT_MANAGEMENT=true
AUDIT_LOGGING=true
DATA_ENCRYPTION=true

# =============================================================================
# DEVELOPMENT/DEBUG
# =============================================================================
DEBUG=false
RELOAD=false
TEST_MODE=false
MOCK_SMS=false
MOCK_GSM=false

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
STORAGE_PATH=/data
MODELS_PATH=/models
