# OpenWeatherMap (Optional - for enhanced weather data)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# WICHITA WEATHER PATTERNS
# =============================================================================
# Tornado season: March-July
TORNADO_SEASON_START=03
TORNADO_SEASON_END=07
