# EVY Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
ENV=development
NODE_TYPE=lilevy|bigevy|hybrid
NODE_ID=evy-node-001
LOG_LEVEL=INFO

# =============================================================================
# SECURITY (CRITICAL - CHANGE THESE!)
# =============================================================================
SECRET_KEY=change_this_secret_key_in_production_minimum_32_characters
OPENAI_API_KEY=your_openai_api_key_here
HUGGING_FACE_TOKEN=your_hugging_face_token_here

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=8000
SMS_GATEWAY_PORT=8001
MESSAGE_ROUTER_PORT=8002
LLM_INFERENCE_PORT=8003
RAG_SERVICE_PORT=8004
PRIVACY_FILTER_PORT=8005
COMMUNICATION_PORT=8006

# bigEVY Ports
MODEL_MANAGER_PORT=9000
LARGE_LLM_PORT=9001
GLOBAL_RAG_PORT=9002
ANALYTICS_PORT=9003
SYNC_SERVICE_PORT=9004
UPDATE_MANAGER_PORT=9005
LOAD_BALANCER_PORT=9006

# Hybrid Ports
HYBRID_COMMUNICATION_PORT=8500
HYBRID_MONITORING_PORT=9092

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_PROVIDER=openai|ollama|tiny
DEFAULT_MODEL=gpt-4
TINY_MODEL=tinyllama
EMBEDDING_MODEL=text-embedding-ada-002

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://evy:evy_password@postgres:5432/evy_db
CHROMA_PERSIST_DIR=/data/chroma

# =============================================================================
# SMS/GSM CONFIGURATION (lilEVY)
# =============================================================================
SMS_DEVICE=/dev/ttyUSB0
SMS_BAUD_RATE=115200
SIM_CARD_PIN=1234

# =============================================================================
# RATE LIMITING
# =============================================================================
MAX_SMS_PER_MINUTE=10
MAX_SMS_PER_HOUR=100

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_ENABLED=true

# =============================================================================
# lilEVY SPECIFIC
# =============================================================================
LILEVY_GSM_DEVICE=/dev/ttyUSB0
LILEVY_GSM_BAUD_RATE=115200
LILEVY_DEFAULT_MODEL=tinyllama
LILEVY_MAX_TOKENS=512
LILEVY_EMBEDDING_MODEL=all-MiniLM-L6-v2
LILEVY_MAX_DOCUMENTS=10000
LILEVY_CACHE_SIZE_MB=500

# =============================================================================
# bigEVY SPECIFIC
# =============================================================================
BIGEVY_GPU_ENABLED=true
BIGEVY_DEFAULT_MODEL=llama-2-7b
BIGEVY_MAX_TOKENS=2048
BIGEVY_BATCH_PROCESSING=true
BIGEVY_EMBEDDING_MODEL=all-mpnet-base-v2
BIGEVY_MAX_DOCUMENTS=1000000
BIGEVY_CACHE_SIZE_MB=10000

# =============================================================================
# HYBRID CONFIGURATION
# =============================================================================
HYBRID_MODE=false
COMPLEXITY_THRESHOLD=0.7
FALLBACK_ENABLED=true
SYNC_INTERVAL_HOURS=1
DISCOVERY_ENABLED=true
MESH_NETWORK=true

# =============================================================================
# ANALYTICS AND SYNC
# =============================================================================
ANALYTICS_ENABLED=true
DATA_RETENTION_DAYS=365
SYNC_INTERVAL_HOURS=1
LILEVY_NODES_DISCOVERY=true
MODEL_UPDATES_ENABLED=true
UPDATE_CHECK_INTERVAL_HOURS=24

# =============================================================================
# LOAD BALANCING
# =============================================================================
LOAD_BALANCING_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# PRIVACY AND SECURITY
# =============================================================================
PRIVACY_FILTER_ENABLED=true
CONSENT_MANAGEMENT=true
AUDIT_LOGGING=true
DATA_ENCRYPTION=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Weather API
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Government/Municipal APIs
MUNICIPAL_API_URL=https://data.yourcity.gov/api
MUNICIPAL_API_KEY=your_municipal_api_key_here

# Social Services APIs
SOCIAL_SERVICES_API_URL=https://api.socialservices.gov
SOCIAL_SERVICES_API_KEY=your_social_services_api_key_here

# =============================================================================
# DEVELOPMENT/DEBUG
# =============================================================================
DEBUG=false
RELOAD=false
TEST_MODE=false
MOCK_SMS=false
MOCK_GSM=false

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
STORAGE_PATH=/data
MODELS_PATH=/models
LOGS_PATH=/logs
